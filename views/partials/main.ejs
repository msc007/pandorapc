<!-- Begin page content -->
<main role="main" class="flex-shrink-0">
  <div class="container">
    <table class="table">
      <thead class="thead-dark">
        <tr>
          <th scope="col">Product Name</th>
          <th scope="col">Vendor</th>
          <th scope="col">Current Price</th>
          <th scope="col">Availability</th>
          <th scope="col">% Sales</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        <% items.forEach( (item) => { item.vendors.forEach( (vendor) => { %>
        <tr>
          <td>
            <a href="<%= vendor.url %>" target="_blank"><%= item.name %> </a>
          </td>
          <td><%= vendor.vendorName %></td>
          <td><%= vendor.currentPrice %></td>
          <td>In stock</td>
          <td>15%</td>
          <td>
            <button
              type="button"
              class="btn btn-dark"
              data-toggle="modal"
              data-target="#subscribeModal"
            >
              Subscribe
            </button>
            <!-- Modal -->
            <div
              class="modal fade"
              id="subscribeModal"
              tabindex="-1"
              role="dialog"
              aria-labelledby="exampleModalLabel"
              aria-hidden="true"
            >
              <div class="modal-dialog" role="document">
                <div class="modal-content">
                  <!-- Modal Header -->
                  <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">
                      <%= item.name %>
                    </h5>
                    <button
                      type="button"
                      class="close"
                      data-dismiss="modal"
                      aria-label="Close"
                    >
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                  <!-- Modal Body -->
                  <div class="modal-body">
                    <!-- Modal Form -->
                    <form>
                      <div class="form-group">
                        <label class="col-form-label"
                          >Subscribe and get email notification when deal is
                          arrive:</label
                        >
                        <input
                          type="text"
                          class="form-control"
                          id="email"
                          placeholder="Enter your email"
                        />
                      </div>
                    </form>
                  </div>
                  <!-- Modal Footer -->
                  <div class="modal-footer">
                    <button
                      type="button"
                      class="btn btn-primary"
                      data-dismiss="modal"
                    >
                      Subscribe
                    </button>
                  </div>
                </div>
              </div>
            </div>
          </td>
        </tr>
        <% }) }) %>
      </tbody>
    </table>
  </div>
</main>
